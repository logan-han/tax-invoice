{
  "name": "australian-tax-invoice-app",
  "version": "1.0.0",
  "description": "A frontend application for Australian tax invoices",
  "main": "index.js",
  "scripts": {
    "start": "export NODE_OPTIONS=--openssl-legacy-provider && node_modules/react-scripts/bin/react-scripts.js start",
    "build": "export NODE_OPTIONS=--openssl-legacy-provider && node_modules/react-scripts/bin/react-scripts.js build",
    "test": "jest",
    "eject": "react-scripts eject"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "jspdf": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.1",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.5.2",
    "jest": "^27.5.1",
    "typescript": "^5.8.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
