{
  "name": "australian-tax-invoice-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A frontend application for Australian tax invoices",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,scss}'",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-google-maps/api": "^2.20.7",
    "bootstrap": "^5.3.8",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sass": "^1.94.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.0",
    "globals": "^16.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/google.maps": "^3.58.1",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "typescript-eslint": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
